{
  "name": "recipes",
  "version": "1.0.0",
  "description": "Application to organize recipes",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/server.js",
    "test": "jest ./src",
    "clean": "rimraf dist node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eakouri/Recipes.git"
  },
  "keywords": [
    "Node",
    "React"
  ],
  "author": "Emma Akouri",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eakouri/Recipes/issues"
  },
  "homepage": "https://github.com/eakouri/Recipes#readme",
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  }
}
